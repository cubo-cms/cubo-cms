{
  "routes": {
    "/": { "controller": "article", "method": "all" },
    "/{{controller}}": { "method": "all" },
    "/{{controller}}/all": { "method": "all" },
    "/{{controller}}/list": { "method": "list" },
    "/{{controller}}/read/{{name}}": { "method": "read" },
    "/{{controller}}/view/{{name}}": { "method": "view" },
    "/{{controller}}/status/{{status}}": { "method": "status" },
    "/{{controller}}/category/{{category}}": { "method": "category" },
    "/category/{{name}}/articles": { "controller": "category", "method": "articles" },
    "/user/login": { "controller": "user", "method": "login" },
    "/user/logout": { "controller": "user", "method": "logout" },
    "/{{controller}}/{{name}}": { "method": "read" }
  }
}
